extends ../layouts/app.pug

block content
  div
    table(class='table')
      tbody           
        tr
          th Title
            each post in posts 
              tr
                td 
                  a(href='/posts/' + post.id) #{post.title}
                td 
                  a(href='/posts/' + post.id + '/edit') Edit
                td
                  form(action='/posts/' + post.id + '?_method=DELETE', method='post') 
                    button(class="btn btn-danger") Delete

 
    
 
