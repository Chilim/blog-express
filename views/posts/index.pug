extends ../layouts/app.pug

block content
  div
    a(href='/') Main page
    table(class='table')
      tbody           
        tr
          th Title
            each post in posts 
              tr
                td 
                  a(href='/posts/' + post.id) #{post.title}
                td 
                  a(href='/posts/' + post.id + '/edit') Edit

 
    
 
